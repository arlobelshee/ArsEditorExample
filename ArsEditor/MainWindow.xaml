<Window x:Class="ArsEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d"
		xmlns:ViewModels="clr-namespace:ArsEditor.ViewModels"
        Title="MainWindow" Height="800" Width="1400"
		d:DataContext="{d:DesignInstance ViewModels:AppViewModelDesignData, IsDesignTimeCreatable=True}" Loaded="_EnsureViewModelIsSet">
    <Grid>
    	<StackPanel x:Name="FileControlPanel" HorizontalAlignment="Left" Margin="8" VerticalAlignment="Top" Orientation="Horizontal">
    		<Button x:Name="OpenFile" Content="Create or Open Character" VerticalAlignment="Top"/>
    		<TextBlock x:Name="CurrentFile" Text="TextBlock" Margin="4,0,0,0" VerticalAlignment="Center"/>
    	</StackPanel>
        
    </Grid>
</Window>
